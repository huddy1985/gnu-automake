#! /bin/sh

# Make sure remaking rules in subdir are correctly generated.

. $srcdir/defs || exit 1

cat > configure.in << 'END'
AM_INIT_AUTOMAKE(nonesuch, nonesuch)
PACKAGE=nonesuch
VERSION=nonesuch
AC_ARG_PROGRAM
AC_PROG_MAKE_SET
AC_PROG_INSTALL
AC_OUTPUT(sub/Makefile)
END

mkdir sub
: > sub/Makefile.am

$AUTOMAKE || exit 1

grep '^Makefile' sub/Makefile.in
